<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".RealtimeCustomFragment"
              android:orientation="vertical"
        >

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <TextView
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="脑电波"
                    android:textSize="16sp"
                    android:textColor="@color/colorDefaultBlack"
                    />

            <cn.entertech.realtimedatasdk.realtime.RealtimeBrainwaveView
                    android:id="@+id/brainwave_view"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rbv_background="@drawable/shape_brainwave_bg"
                    app:rbv_mainColor="#ffffff"
                    app:rbv_textColor="#ffffff"
                    app:rbv_leftBrainwaveColor="#ff4852"
                    app:rbv_rightBrainwaveColor="#0064ff"
                    >

            </cn.entertech.realtimedatasdk.realtime.RealtimeBrainwaveView>

            <cn.entertech.realtimedatasdk.realtime.RealtimeBrainwaveSpectrumView
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rbsv_background="@drawable/shape_brainwave_spectrum_bg"
                    app:rbsv_mainColor="#0064ff"
                    app:rbsv_processBarColors="#0064ff,#0064ff,#0064ff,#0064ff,#0064ff"
                    >

            </cn.entertech.realtimedatasdk.realtime.RealtimeBrainwaveSpectrumView>

            <TextView
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="心率"
                    android:textSize="16sp"
                    android:textColor="@color/colorDefaultBlack"
                    />

            <cn.entertech.realtimedatasdk.realtime.RealtimeHeartRateView
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rhrv_background="@drawable/shape_heart_rate_bg"
                    app:rhrv_mainColor="#ff4852"
                    >

            </cn.entertech.realtimedatasdk.realtime.RealtimeHeartRateView>

            <TextView
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="情绪"
                    android:textSize="16sp"
                    android:textColor="@color/colorDefaultBlack"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    >

                <cn.entertech.realtimedatasdk.realtime.RealtimeAttentionView
                        app:rav_background="@drawable/shape_attention_bg"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        app:rav_mainColor="#00d993"
                        >

                </cn.entertech.realtimedatasdk.realtime.RealtimeAttentionView>

                <cn.entertech.realtimedatasdk.realtime.RealtimeRelaxationView
                        app:rrv_background="@drawable/shape_relaxation_bg"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        app:rrv_mainColor="#ffc200"
                        >

                </cn.entertech.realtimedatasdk.realtime.RealtimeRelaxationView>

            </LinearLayout>

            <cn.entertech.realtimedatasdk.realtime.RealtimePressureView
                    android:layout_marginBottom="@dimen/margin_vertical"
                    app:rpv_background="@drawable/shape_pressure_bg"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    app:rpv_mainColor="#ff4852"
                    >

            </cn.entertech.realtimedatasdk.realtime.RealtimePressureView>
        </LinearLayout>

    </ScrollView>
</LinearLayout>