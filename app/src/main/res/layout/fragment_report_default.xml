<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ReportDefaultFragment"
        >

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:text="@string/sdk_brainwave_spectrum"
                    android:textColor="@color/colorDefaultBlack"
                    android:textSize="32sp"
                    />
            <!--            脑波曲线参数说明-->
            <!--            robs_isShowMenuIconBg ： 是否显示标题菜单按钮背景   -->
            <!--            robs_isTitleIconShow ：  是否显示标题图标-->
            <!--            robs_isTitleMenuIconShow ：  是否显示标题菜单图标-->
            <!--            robs_menuIconBg ：  菜单背景图标-->
            <!--            robs_pointCount ：  曲线显示点数-->
            <!--            robs_spectrumColors ：  各曲线色值-->
            <!--            robs_timeUnit ：  各个绘制点之间的时间间隔，单位：毫秒-->
            <!--            robs_title ：  标题-->
            <!--            robs_titleMenuIcon ：  标题菜单图标-->
            <!--            robs_xAxisUnit ：  图表横轴单位标注    -->
            <cn.entertech.uicomponentsdk.report.ReportJournalCoherenceLineView
                    android:id="@+id/report_coherence"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            <cn.entertech.uicomponentsdk.report.ReportAverageChartCard
                    android:id="@+id/report_last_7_time"
                    app:racc_selectorBgColor="@color/black"
                    app:racc_selectorTextColor="@color/white"
                    app:racc_selectorIconColor="@color/white"
                    android:layout_width="match_parent"
                    app:racc_unit="ms"
                    app:racc_averageLineColor="#ff0000"
                    android:layout_height="wrap_content"/>
            <cn.entertech.uicomponentsdk.report.CommonReportCurveCard
                    android:id="@+id/card_flow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:crcc_titleMenuIconColor="#ff0000"
                    app:crcc_titleMenuIcon="@drawable/vector_drawable_brain"
                    app:crcc_title="Flow"
                    app:crcc_backgroundColor="#ff0000"
                    app:crcc_subTitle="Flow time is 30% of total time"/>
            <cn.entertech.uicomponentsdk.report.ReportJournalFlowLineView
                    android:layout_width="match_parent"
                    android:layout_height="118dp"/>
            <cn.entertech.uicomponentsdk.report.ReportOptionalBrainwaveSpectrumView
                    android:id="@+id/chart_brainwave"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:robs_isShowMenuIconBg="false"
                    app:robs_isTitleIconShow="false"
                    app:robs_isTitleMenuIconShow="true"
                    app:robs_menuIconBg="@mipmap/pic_report_top_bg_hr"
                    app:robs_pointCount="100"
                    app:robs_spectrumColors="#FF6682,#FB9C98,#F7C77E,#5FC695,#5E75FF"
                    app:robs_timeUnit="700"
                    app:robs_title="@string/sdk_brainwave_spectrum"
                    app:robs_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:robs_xAxisUnit="@string/sdk_time_unit"
                    />
            <cn.entertech.uicomponentsdk.report.SessionBrainwaveChart
                    android:id="@+id/chart_session_brainwave"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:sbc_isShowMenuIconBg="false"
                    app:sbc_isTitleIconShow="false"
                    app:sbc_isTitleMenuIconShow="true"
                    app:sbc_menuIconBg="@mipmap/pic_report_top_bg_hr"
                    app:sbc_pointCount="100"
                    app:sbc_spectrumColors="#FF6682,#58B9E0,#F7C77E,#5FC695,#5E75FF"
                    app:sbc_timeUnit="700"
                    app:sbc_title="@string/sdk_brainwave_spectrum"
                    app:sbc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:sbc_xAxisUnit="@string/sdk_time_unit"
                    app:sbc_xAxisLineColor="#9AA1A9"
                    app:sbc_textColor="#7A7C8A"
                    />

            <cn.entertech.uicomponentsdk.report.SessionBrainwaveStackChart
                    android:id="@+id/chart_brainwave_session_stack"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:sbsc_isTitleMenuIconShow="true"
                    app:sbsc_textColor="#7A7C8A"
                    app:sbsc_mainColor="#FF6682"
                    app:sbsc_gridLineColor="#DDE1EB"
                    app:sbsc_markViewTitle="@string/sdk_heart_rate"
                    app:sbsc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:sbsc_fillColors="#FF6682,#58B9E0,#F7C77E,#5FC695,#5E75FF"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:text="@string/sdk_heart_rate"
                    android:textColor="@color/colorDefaultBlack"
                    android:textSize="32sp"
                    />

            <cn.entertech.uicomponentsdk.report.TrendCommonCandleChart
                    android:id="@+id/chart_candle_stick"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:tccc_textColor="#7A7C8A"
                    app:tccc_mainColor="#FF6682"
                    app:tccc_xAxisLineColor="#9AA1A9"
                    app:tccc_gridLineColor="#DDE1EB"
                    app:tccc_lineWidth="2dp"
                    app:tccc_unit="min"
                    app:tccc_isShowLevel="false"
                    app:tccc_valueLevelBgColor="#E0FCEE"
                    app:tccc_valueLevelTextColor="#324039"
                    app:tccc_markViewTitle="@string/sdk_heart_rate"
                    app:tccc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    />

            <cn.entertech.uicomponentsdk.report.TrendCommonBarChart
                    android:id="@+id/chart_bar"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:tcbc_isTitleMenuIconShow="true"
                    app:tcbc_xAxisLineColor="#9AA1A9"
                    app:tcbc_gridLineColor="#DDE1EB"
                    app:tcbc_textColor="#7A7C8A"
                    app:tcbc_mainColor="#5FC695"
                    app:tcbc_unit="min"
                    app:tcbc_isShowLevel="false"
                    app:tcbc_valueLevelBgColor="#E0FCEE"
                    app:tcbc_valueLevelTextColor="#324039"
                    app:tcbc_markViewTitle="@string/sdk_heart_rate"
                    app:tcbc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    />


            <cn.entertech.uicomponentsdk.report.ReportLineChartCard
                    android:id="@+id/chart_hr"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:rlcc_isTitleMenuIconShow="true"
                    app:rlcc_lineColor="#FF6682"
                    app:rlcc_lineWidth="1dp"
                    app:rlcc_markViewTitle="@string/sdk_heart_rate"
                    app:rlcc_pointCount="100"
                    app:rlcc_timeUnit="400"
                    app:rlcc_title="@string/sdk_heart_rate"
                    app:rlcc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:rlcc_xAxisUnit="@string/sdk_time_unit"
                    />

            <cn.entertech.uicomponentsdk.report.ReportPressureChartCard
                    android:id="@+id/chart_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:rlcc_isTitleMenuIconShow="true"
                    app:rlcc_lineColor="#FF6682"
                    app:rlcc_lineWidth="1dp"
                    app:rlcc_markViewTitle="@string/sdk_heart_rate"
                    app:rlcc_pointCount="100"
                    app:rlcc_timeUnit="400"
                    app:rlcc_title="@string/sdk_heart_rate"
                    app:rlcc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:rlcc_xAxisUnit="@string/sdk_time_unit"
                    />

            <cn.entertech.uicomponentsdk.report.TrendPressureChart
                    android:id="@+id/chart_pressure_trend"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:tpc_isTitleMenuIconShow="true"
                    app:tpc_textColor="#7A7C8A"
                    app:tpc_mainColor="#FF6682"
                    app:tpc_gridLineColor="#DDE1EB"
                    app:tpc_unit="min"
                    app:tpc_markViewTitle="@string/sdk_heart_rate"
                    app:tpc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:tpc_fillGradientStartColor="#80FB9C98"
                    app:tpc_fillGradientEndColor="#805F76FF"
                    />

            <cn.entertech.uicomponentsdk.report.TrendBrainwaveChart
                    android:id="@+id/chart_brainwave_trend"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:tbc_isTitleMenuIconShow="true"
                    app:tbc_textColor="#7A7C8A"
                    app:tbc_mainColor="#FF6682"
                    app:tbc_gridLineColor="#DDE1EB"
                    app:tbc_markViewTitle="@string/sdk_heart_rate"
                    app:tbc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:tbc_fillColors="#FF6682,#58B9E0,#F7C77E,#5FC695,#5E75FF"
                    />
            <cn.entertech.uicomponentsdk.report.ReportHRLineChartCard
                    android:id="@+id/chart_hrv"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:rhlcc_isShowMenuIconBg="true"
                    app:rhlcc_isTitleMenuIconShow="true"
                    app:rhlcc_lineColor="#FFC56F"
                    app:rhlcc_lineWidth="1dp"
                    app:rhlcc_markViewTitle="@string/sdk_hrv"
                    app:rhlcc_menuIconBg="@mipmap/pic_report_top_bg_hr"
                    app:rhlcc_pointCount="200"
                    app:rhlcc_timeUnit="400"
                    app:rhlcc_title="@string/sdk_heart_rate"
                    app:rhlcc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:rhlcc_xAxisUnit="@string/sdk_time_unit"
                    />

            <cn.entertech.uicomponentsdk.report.SessionCommonChart
                    android:id="@+id/chart_session_common"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:scc_bgLineColor="#DDE1EB"
                    app:scc_isShowLevel="true"
                    app:scc_isShowMenuIconBg="false"
                    app:scc_isTitleMenuIconShow="true"
                    app:scc_lineWidth="2dp"
                    app:scc_mainColor="#FFC56F"
                    app:scc_markViewBgColor="#F1F5F6"
                    app:scc_markViewTitle="@string/sdk_hrv"
                    app:scc_menuIconBg="@mipmap/pic_report_top_bg_hr"
                    app:scc_pointCount="200"
                    app:scc_showXAxisUnit="false"
                    app:scc_textColor="#7A7C8A"
                    app:scc_timeUnit="400"
                    app:scc_isDataAverageInt="true"
                    app:scc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:scc_title_description="TOTAL"
                    app:scc_title_unit="min"
                    app:scc_valueLevelBgColor="#E0FCEE"
                    app:scc_valueLevelTextColor="#324039"
                    app:scc_xAxisLineColor="#9AA1A9"
                    app:scc_xAxisUnit="@string/sdk_time_unit"

                    />

            <cn.entertech.uicomponentsdk.report.SessionPressureChart
                    android:id="@+id/chart_session_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:spc_bgLineColor="#DDE1EB"
                    app:spc_isShowMenuIconBg="false"
                    app:spc_isTitleMenuIconShow="true"
                    app:spc_lineWidth="1dp"
                    app:spc_mainColor="#FF6682"
                    app:spc_markViewBgColor="#F1F5F6"
                    app:spc_markViewTitle="@string/sdk_hrv"
                    app:spc_menuIconBg="@mipmap/pic_report_top_bg_hr"
                    app:spc_pointCount="200"
                    app:spc_showXAxisUnit="false"
                    app:spc_textColor="#7A7C8A"
                    app:spc_timeUnit="400"
                    app:spc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:spc_title_description="AVERAGE"
                    app:spc_xAxisLineColor="#9AA1A9"
                    app:spc_xAxisUnit="@string/sdk_time_unit"
                    app:spc_isDrawFill="false"
                    app:spc_fillGradientStartColor="#80FB9C98"
                    app:spc_fillGradientEndColor="#805F76FF"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:text="@string/emotion"
                    android:textColor="@color/colorDefaultBlack"
                    android:textSize="32sp"
                    />

            <cn.entertech.uicomponentsdk.report.ReportAffectiveLineChartCard
                    android:id="@+id/chart_relaxation_and_attention"
                    android:layout_width="match_parent"
                    android:layout_height="283dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:ralcc_attentionLineColor="#5FC695"
                    app:ralcc_isTitleMenuIconShow="true"
                    app:ralcc_markViewTitle1="@string/sdk_attention"
                    app:ralcc_markViewTitle2="@string/sdk_relaxation"
                    app:ralcc_pointCount="100"
                    app:ralcc_relaxationLineColor="#4B5DCC"
                    app:ralcc_timeUnit="800"
                    app:ralcc_title="@string/sdk_relaxation_and_attention"
                    app:ralcc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:ralcc_xAxisUnit="@string/sdk_time_unit"
                    />


            <cn.entertech.uicomponentsdk.report.ReportLineChartCard
                    android:id="@+id/chart_relaxation"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:rlcc_isDrawFill="true"
                    app:rlcc_isTitleMenuIconShow="true"
                    app:rlcc_lineColor="#4B5DCC"
                    app:rlcc_lineWidth="1dp"
                    app:rlcc_markViewTitle="@string/sdk_relaxation"
                    app:rlcc_pointCount="100"
                    app:rlcc_timeUnit="800"
                    app:rlcc_title="@string/sdk_relaxation"
                    app:rlcc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:rlcc_xAxisUnit="@string/sdk_time_unit"
                    />


            <cn.entertech.uicomponentsdk.report.ReportLineChartCard
                    android:id="@+id/chart_attention"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:rlcc_isDrawFill="true"
                    app:rlcc_isTitleMenuIconShow="true"
                    app:rlcc_lineColor="#5FC695"
                    app:rlcc_lineWidth="1dp"
                    app:rlcc_markViewTitle="@string/sdk_attention"
                    app:rlcc_pointCount="100"
                    app:rlcc_timeUnit="800"
                    app:rlcc_title="@string/sdk_attention"
                    app:rlcc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    app:rlcc_xAxisUnit="@string/sdk_time_unit"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <cn.entertech.uicomponentsdk.report.ReportPressureCard
                        android:id="@+id/report_pressure"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="141dp"
                        android:layout_marginTop="@dimen/activity_margin_half"
                        app:rpc_isShowTitleMenuIcon="false"
                        app:rpc_background="#FFFFFF"
                        app:rpc_barBgColor="#DDE1EB"
                        app:rpc_showInnerLevel="true"
                        app:rpc_barScaleLength="24dp"
                        app:rpc_barWidth="18dp"
                        app:rpc_isShowTitleIcon="false"
                        app:rpc_levelBgColor="#FFE7E6"
                        app:rpc_titleText="Stress"
                        app:rpc_levelTextColor="#402D30"
                        app:rpc_textColor="#11152E"
                        app:rpc_topBackground="@mipmap/pic_report_top_bg_hr"
                        />

                <cn.entertech.uicomponentsdk.report.ReportPressureCard
                        android:id="@+id/report_pressure2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="141dp"
                        android:layout_marginTop="@dimen/activity_margin_half"
                        app:rpc_isShowTitleMenuIcon="false"
                        app:rpc_background="#FFFFFF"
                        app:rpc_barBgColor="#DDE1EB"
                        app:rpc_showInnerLevel="true"
                        app:rpc_titleText="Stress"
                        app:rpc_barScaleLength="24dp"
                        app:rpc_barWidth="18dp"
                        app:rpc_isShowTitleIcon="false"
                        app:rpc_levelBgColor="#FFE7E6"
                        app:rpc_levelTextColor="#402D30"
                        app:rpc_textColor="#11152E"
                        app:rpc_topBackground="@mipmap/pic_report_top_bg_hr"
                        />
            </LinearLayout>

            <cn.entertech.uicomponentsdk.report.ReportRelaxationAndAttentionCard
                    app:rcraa_topBackground="@mipmap/pic_report_top_bg_hr"
                    android:id="@+id/report_relaxation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rcraa_barColor="#4B5DCC"
                    app:rcraa_levelBgColor="#E5EAF7"
                    app:rcraa_levelTextColor="#2B2E40"
                    app:rcraa_textColor="#11152E"
                    app:rcraa_lineColor="#DDE1EB"
                    app:rcraa_titleText="Relaxation"
                    app:rcraa_showTitleIcon="true"
                    app:rcraa_showTitleMenuIcon="false"
                    app:rcraa_titleIcon="@drawable/vector_drawable_heart"/>

            <cn.entertech.uicomponentsdk.report.StackedAreaChart
                    android:id="@+id/stack_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />
        </LinearLayout>
    </ScrollView>

</LinearLayout>