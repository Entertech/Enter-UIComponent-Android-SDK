<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:andorid="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
            android:id="@+id/ll_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="0dp"
            android:orientation="vertical"
            >

        <include layout="@layout/layout_common_card_title" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:layout_marginRight="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

            <cn.entertech.uicomponentsdk.widget.CustomVerticalTextView
                    android:id="@+id/vertical_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:cvtv_text="HRV (ms)"
                    app:cvtv_textSize="12sp"
                    />

            <com.github.mikephil.charting.charts.LineChart
                    android:background="@color/white"
                    android:id="@+id/hrv_chart"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    />

<!--            <cn.entertech.uicomponentsdk.report.HeartRateVariabilityChart-->
<!--                    android:id="@+id/hrv_chart"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="130dp"-->
<!--                    android:layout_marginLeft="@dimen/dp_4"-->
<!--                    android:visibility="gone"-->
<!--                    app:hrc_leftBarTextSize="10sp"-->
<!--                    app:hrc_leftBarWidth="4dp"-->
<!--                    app:hrc_timeStampTextPaddingTop="@dimen/activity_margin_half"-->
<!--                    app:hrc_timeStampTextSize="12sp"-->
<!--                    />-->

        </LinearLayout>

        <TextView
                android:id="@+id/tv_time_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_margin"
                android:text="@string/time_unit"
                />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginBottom="@dimen/activity_margin"
                android:orientation="horizontal"
                >

            <LinearLayout
                    android:id="@+id/ll_avg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                <TextView
                        android:id="@+id/tv_heart_avg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="平均: 78"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        />

                <TextView
                        android:id="@+id/tv_avg_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_half"
                        android:fontFamily="sans-serif"
                        android:text="@string/heart_rate_unit_bpm"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_max"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                <TextView
                        android:id="@+id/tv_heart_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="最大: 78"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        />

                <TextView
                        android:id="@+id/tv_max_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_half"
                        android:fontFamily="sans-serif"
                        android:text="@string/heart_rate_unit_bpm"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_min"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal"
                    >

                <TextView
                        android:id="@+id/tv_heart_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="最小: 78"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        />

                <TextView

                        android:id="@+id/tv_min_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_half"
                        android:fontFamily="sans-serif"
                        android:text="@string/heart_rate_unit_bpm"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
            android:id="@+id/rl_no_data_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLoadingCoverBg"
            android:visibility="gone"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="@string/meditation_no_device_tip_1"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="normal"
                />
    </RelativeLayout>
</FrameLayout>